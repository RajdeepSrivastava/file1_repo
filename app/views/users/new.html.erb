<div class="form-container">
  <h1 class="form-heading">New User</h1>

<%= form_tag("/users/create", :method => "post") do %>
     <div class="form-field">
        Name <%= text_field_tag(:name) %><br>
    </div>
     <div class="form-field">
        Email_id <%= email_field_tag(:email)%><br>
    </div>
     <div class="form-field">
        Address <%= text_field_tag(:address)%><br>
    </div>
    <br>
    <%= submit_tag("Submit")%>
<%end%>
</div>